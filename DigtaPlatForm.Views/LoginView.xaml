<Window
    x:Class="DigtaPlatForm.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c="clr-namespace:DigtaPlatform.Common;assembly=DigtaPlatForm.Common"
    xmlns:local="clr-namespace:DigtaPlatForm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="系统登录"
    Width="300"
    Height="520"
    Background="#f1f5fd"
    DataContext="{Binding Source={StaticResource Locator}, Path=value}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Name="loginwin"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DigtaPlatForm.Assets;component/Styles/ButtonStyle.xaml" />
                <ResourceDictionary>
                    <Style x:Key="UserNameTextBoxStyle" TargetType="TextBox">
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border
                                        Name="border"
                                        Height="40"
                                        BorderBrush="#ddd"
                                        BorderThickness="0,0,0,1"
                                        SnapsToDevicePixels="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="{DynamicResource Iconfont}"
                                                FontSize="15"
                                                Text="&#xe610;">

                                                <TextBlock.Foreground>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Offset="0" Color="#16a1ff" />
                                                        <GradientStop Offset="0.75" Color="#b4fee7" />
                                                        <GradientStop Offset="1" Color="#16a1ff" />
                                                    </LinearGradientBrush>
                                                </TextBlock.Foreground>
                                            </TextBlock>

                                            <TextBlock
                                                Name="markText"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="13"
                                                Foreground="#ddd"
                                                Text="请输入工号/手机号/用户名"
                                                Visibility="Collapsed" />
                                            <ScrollViewer Name="PART_ContentHost" Grid.Column="1" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>

                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocused" Value="true">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF569DE5" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource Mode=Self}}" Value="">
                                            <Setter TargetName="markText" Property="Visibility" Value="Visible" />
                                        </DataTrigger>

                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Border
                                        Name="border"
                                        Height="40"
                                        BorderBrush="#ddd"
                                        BorderThickness="0,0,0,1"
                                        SnapsToDevicePixels="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource Iconfont}"
                                                FontSize="15"
                                                Text="&#xe602;">

                                                <TextBlock.Foreground>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Offset="0" Color="#16a1ff" />
                                                        <GradientStop Offset="0.75" Color="#b4fee7" />
                                                        <GradientStop Offset="1" Color="#16a1ff" />
                                                    </LinearGradientBrush>
                                                </TextBlock.Foreground>
                                            </TextBlock>

                                            <TextBlock
                                                Name="markText"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="13"
                                                Foreground="#ddd"
                                                Text="请输入登录密码"
                                                Visibility="Collapsed" />
                                            <ScrollViewer Name="PART_ContentHost" Grid.Column="1" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>

                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF7EB4EA" />
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocused" Value="true">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#FF569DE5" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Path=User.Password}" Value="">
                                            <Setter TargetName="markText" Property="Visibility" Value="Visible" />
                                        </DataTrigger>

                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>


            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid ClipToBounds="true">
        <Ellipse
            Width="400"
            Height="400"
            Margin="0,-200,-200,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset="0" Color="#c2e0fa" />
                    <GradientStop Offset="1" Color="#f1f5fd" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse
            Width="400"
            Height="400"
            Margin="-180,-180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset="0" Color="#b4fee7" />
                    <GradientStop Offset="1" Color="Transparent" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Grid Margin="35,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="1.8*" />
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="1"
                Width="100"
                SnapsToDevicePixels="True"
                Source="pack://application:,,,/DigtaPlatForm.Assets;component/Images/logo.png">
                <Image.OpacityMask>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="Black" />
                        <GradientStop Offset="0.5" Color="#55000000" />
                        <GradientStop Offset="1" Color="#05000000" />
                    </LinearGradientBrush>
                </Image.OpacityMask>
            </Image>
            <TextBlock
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="YouYuan"
                FontSize="17"
                SnapsToDevicePixels="True"
                Text="空压站数字化监控系统">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#16a1ff" />
                        <GradientStop Offset="0.75" Color="Goldenrod" />
                        <GradientStop Offset="1" Color="#16a1ff" />
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="0"
                        Opacity="0.2"
                        ShadowDepth="0"
                        Color="#DDD" />
                </TextBlock.Effect>
                <TextBlock.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1.2" />
                    </TransformGroup>
                </TextBlock.LayoutTransform>
            </TextBlock>
            <TextBox
                Grid.Row="3"
                VerticalContentAlignment="Center"
                Style="{StaticResource UserNameTextBoxStyle}"
                Text="{Binding User.UserName, UpdateSourceTrigger=PropertyChanged}" />

            <PasswordBox
                Grid.Row="4"
                VerticalContentAlignment="Center"
                Style="{StaticResource PasswordBoxStyle}"
                c:PasswordBoxHelper.Attach="123"
                c:PasswordBoxHelper.Password="{Binding User.Password,Mode=TwoWay}"/>
            <Button
                Grid.Row="6"
                Height="35"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=loginwin}"
                Content="登录"
                Style="{StaticResource NormalButtonStyle}" />

            <TextBlock
                Grid.Row="7"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Red"
                Text="{Binding ErrorMessage}"
                TextWrapping="Wrap" />

          
        </Grid>
        <Button
      HorizontalAlignment="Right"
      VerticalAlignment="Top"
      Click="CloseWindow"
      Content="&#xe653;"
      FontFamily="{DynamicResource Iconfont}" 
      Style="{StaticResource WindowControlButtonStyle}"
      Width="40" Height="40" FontSize="14" Margin="0,0,5,0" WindowChrome.IsHitTestVisibleInChrome="True"
      />
    </Grid>
</Window>
